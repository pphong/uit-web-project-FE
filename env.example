# ===========================================
# UIT WEB PROJECT - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update the values
# All environment variables must start with VITE_ for Vite to access them

# ===========================================
# API CONFIGURATION
# ===========================================
# Sử dụng VITE_API_URL
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
VITE_APP_NAME=UIT Web Project
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Quản lý tài chính cá nhân

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_TOKEN_EXPIRY=24h

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
VITE_DB_NAME=uit_web_project

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Google Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=

# Sentry for error tracking (optional)
VITE_SENTRY_DSN=

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# ===========================================
# ADDITIONAL CONFIGURATION
# ===========================================
# Add any additional environment variables here
# Remember to prefix them with VITE_
